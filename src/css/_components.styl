.hamburguer-icon
	display none

	.hamburguer-line 
		width 32px
		margin 6px
		border 2px solid white
		transition all 0.325s ease
		border-radius 12px
	
	&.opened 
		padding 14px 1px

		.hamburguer-line 
			margin -3.5px
		
		.line1 
			transform rotate(45deg)
		
		.line2 
			opacity 0
		
		.line3 
			transform rotate(-45deg)

#expandable-menu
	display none
	position fixed
	width 100%
	height calc(100% - 98.66px)
	bottom 0
	color white
	touch-action none
	z-index 1

	.expandable-menu-blur
		position absolute
		width 100%
		height 100%
		background-color rgba(0, 0, 0, 0.5)
		backdrop-filter blur(5px)
		z-index -1

	.expandable-menu-elements
		padding 20px
		font-size 28px
		font-family "Oswald"

		.expandable-menu-element
			position relative
			padding 6px 0 9px
			background-color rgba(255, 255, 255, 0.3)
			backdrop-filter blur(10px)
			transition background-color 0.325s
			border-radius 10px

			&:not(:last-child)
				margin-bottom 8px

			&.active-menu-element
				background-color rgba(255, 255, 255, 0.3)

				&:after
					content ""
					position absolute
					left 4px
					width calc(100% - 8px)
					height 3px
					bottom 0
					background linear-gradient(to right, #f05b80, #6b4391, #49add8, #fc646c);
					background-size 400% auto
					animation animatedSliderGradient 5s infinite
					border-bottom-left-radius 8px
					border-bottom-right-radius 8px

.social-icons, .social-icons a
	display flex
	justify-content space-between
	flex-direction row
	margin 0 12px
	
.social-icons
	color #fff

	a:hover
		background linear-gradient(45deg, #FC466B 0%, #3F5EFB 100%)
		-webkit-background-clip text
		-webkit-text-fill-color transparent
		animation socialIconHover 1s

.masonry-portfolio-container
	columns 4 200px
	column-gap 1rem
	margin 16px

	.portfolio-item
		background #ec985a
		color white
		margin 0 0 1rem 0
		display inline-block
		width 100%
		text-align center
		font-weight 900
		font-size 2rem
		user-select none

.shaped-btn
	padding 12px 24px
	border-radius 18px 0 18px 0
	margin 8px
	border 3px solid white
	font-weight bold
	background-color transparent
	color white
	flex-grow 1
	transition border-radius 0.5s, box-shadow 0.5s, transform 0.5s
	//animation neonEffect 6s infinite
	font-size 20px
	outline none
	box-shadow 1px 1px 4px white

	&:hover
		border-radius 0 18px 0 18px
		box-shadow 1px 1px 12px white
		transform scale(1.1)

	&:active
		transform scale(1)

/* The posts on the blog section */
.post-container
	padding 12px 0

.post-divider
	height 3px
	width 100%
	background-image linear-gradient(to right, transparent, rgba(255, 255, 255, 0.8), transparent)